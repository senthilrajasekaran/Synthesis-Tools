method transition ( a: Int , b : Int ) returns ( i : Int  )
    requires (a > 0)
    requires (b > 0)
    requires (a <= b)
    ensures ((i <= b) && (a <= i)) 
    {
        i := ((a + b) / 2)
        // input term generator term on RHS of i:=
        // Viper automatically uses integer division. 
    }
    
